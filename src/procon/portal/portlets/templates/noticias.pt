  <ul class="lstNoticias">
    <tal:noticias tal:define="noticias view/getNewsItems" tal:repeat="noticia noticias">
      <li class="itemNoticias">
        <a href="#" tal:attributes="href python:noticia.getObject().absolute_url();
                                    title noticia/Title"
                    tal:content="noticia/Title">Not√≠cia 1</a>
