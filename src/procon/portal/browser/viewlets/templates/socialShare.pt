<div tal:define="url python:context.absolute_url()" class="socialShare" >
  <p>Compartilhar</p>
  <ul>
    <li class="shareFacebook">
      <a target="_blank" href="#" tal:attributes="href string:http://www.facebook.com/sharer/sharer.php?u=${url}">
    </li>

    <li class="shareTwitter">
      <a target="_blank" href="#" tal:attributes="href string:http://twitter.com/share?text=Im Sharing on Twitter&url=${url}"></a>
    </li>

    <li class="shareGoogle">
      <a target="_blank" href="#" tal:attributes="href string:https://plus.google.com/share?url=${url}"></a>
    </li>

    <li class="whatsapp">
      <script>
    //<![CDATA[
    var siteurl = window.location.href;
      document.write('<a href="whatsapp://send" data-text="Confira o site:" data-href="' + siteurl + '" class="wa_btn wa_btn_s">\
    Share</a> \
    ');
    //]]>
    </script>
    </li>
  </ul>
</div>